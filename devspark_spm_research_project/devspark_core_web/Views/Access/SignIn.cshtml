@{
    Layout = "~/Views/Shared/_AccessLayout.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <img src="~/assets/images/logos/Shan D. Wanigasuriya.png" alt class="w-px-150 h auto" />
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-2">Welcome to DEV_SPARK! 👋</h4>
                    <p class="mb-4">Please sign-in to your account and start the adventure</p>

                    <form id="formAuthentication" class="mb-3" action="index.html" method="POST">

                        <div class="row">
                            <div class="col-12 text-center">
                                <img src="~/assets/images/logos/microsoft-logo.png" alt="logo" class="w-px-200 h-auto" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <a href="@Url.Action("MicrosoftSignIn", "Access")" class="btn btn-primary d-grid w-100">Sign in</a>
                        </div>
                    </form>

                    <p class="text-center">
                        <span>New on our platform?</span>
                        <a href="@Url.Action("Register", "Access")">
                            <span>Register</span>
                        </a>
                    </p>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>