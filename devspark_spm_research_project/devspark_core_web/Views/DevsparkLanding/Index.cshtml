@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row" data-masonry='{"percentPosition": true }'>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card">
                <img class="card-img-top" src="~/theme/v1/assets/img/elements/1.jpg" alt="Card image cap" />
                <div class="card-body">
                        <h5 class="card-title">Welcome to DevSpark - Interactive Dev Space</h5>
                    <p class="card-text">
                            Our platform is designed to empower learners with access to diverse courses and tutorials that cater to various skill levels. Whether you're starting your journey or looking to enhance your expertise, we provide comprehensive resources to help you achieve your goals. Join us and unlock your potential!
                    </p>
                </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card p-3">
                    <figure class="p-3 mb-0">
                        <blockquote class="blockquote">
                            <p>Join a vibrant community where knowledge sharing is encouraged and collaboration flourishes. Our platform is a safe space for everyone to express thoughts and learn together.</p>
                        </blockquote>
                        <figcaption class="blockquote-footer mb-0 text-muted">
                            Connect and collaborate with fellow learners and experts alike.
                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card">
                <img class="card-img-top" src="~/theme/v1/assets/img/elements/12.jpg" alt="Card image cap" />
                    <div class="card-body">
                        <h5 class="card-title">Empowering Developers</h5>
                        <p class="card-text">
                            Dive into a rich collection of development tools, resources, and community support designed for developers at all stages. Whether you’re looking for coding tutorials, documentation, or collaboration opportunities, we offer an environment that fosters innovation and growth in the tech community. Connect, learn, and create with us!
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card bg-primary text-white text-center p-3">
                    <figure class="mb-0">
                        <blockquote class="blockquote">
                            <p>Engage in interactive discussions, share insights, and seek advice from peers. Our forums are designed to enhance your learning experience and encourage knowledge exchange.</p>
                        </blockquote>
                        <figcaption class="blockquote-footer mb-0 text-white">
                            Participate in enriching conversations that elevate your understanding.
                        </figcaption>
                    </figure>
                </div>
            </div>
            @* <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">This card has a regular title and short paragraph of text below it.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
                </div>
            </div> *@
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card">
                <img class="card-img-top" src="~/theme/v1/assets/img/elements/19.jpg" alt="Card image cap" />
                </div>
            </div>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card p-3 text-end">
                    <figure class="mb-0">
                        <blockquote class="blockquote">
                            <p>Benefit from a supportive environment where you can express your thoughts, seek guidance, and contribute your expertise to help others along their journey.</p>
                        </blockquote>
                        <figcaption class="blockquote-footer mb-0 text-muted">
                            Together, we can achieve greater things.
                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4 mb-4">
                <div class="card p-3 text-end">
                    <figure class="mb-0">
                        <blockquote class="blockquote">
                            <p>Stay updated with the latest trends and resources that can help you excel in your chosen field. Our platform is committed to providing timely and relevant information.</p>
                        </blockquote>
                        <figcaption class="blockquote-footer mb-0 text-muted">
                            Join us and stay ahead in your learning journey.
                        </figcaption>
                    </figure>
                </div>
            </div>
            </div>
    </div>
    <!-- / Content -->

    <!-- Footer -->
    <footer class="content-footer footer bg-footer-theme">
        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
            <div class="mb-2 mb-md-0">
                ©
                <script>
                    document.write(new Date().getFullYear());
                </script>
                , made with ❤️ by
                <a>Dev_Spark Team</a>
            </div>
        </div>
    </footer>
    <!-- / Footer -->

    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->

