@using devspark_core_web.Areas.ForumPortal.Models
@model QuestionDetailViewModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@* Other HTML and Razor code *@

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/forum.js"></script>

@* Other HTML and Razor code *@

<div class="container-xxl flex-grow-1 container-p-y">
<div class="col-12">
    <div class="card mx-3 mt-3 mb-4" style="width: 100%; max-width: 1050px;">
        <a href="@Url.Action("Index", "ForumPortal")">
        <button type="button" class="btn btn-icon btn-primary">
            <i class='bx bx-arrow-back'></i>
        </button>
        </a>
        <div class="card-body">
            <h5 class="card-title">@Model.Question.Title</h5>
            <p class="card-text">
                @Model.Question.Description
            </p>

             
                <div class="dropdown text-end">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("UpdateQuestion", "ForumPortal", new{ questionId = @Model.Question.QuestionId})"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                        <form action="@Url.Action("DeleteQuestion", "ForumPortal")" method="post">
                            <input type="hidden" name="questionId" value="@Model.Question.QuestionId" />
                            
                        @if (Model.Question.UserId == ViewBag.loggedUserId)
                            {
                                <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this question?')">
                                <i class="bx bx-trash me-1"></i> Delete
                                </button>
                            }
                        else
                        {
                                <button class="dropdown-item" onclick="return confirm('Are you sure you want to delete this question?')" disabled>
                                    <i class="bx bx-trash me-1"></i> Delete
                                </button>
                            
                        }
                        </form>

                    </div>
                </div>
                 
             
        </div>
    </div>
</div>




<h3 class="pb-1 mb-4 mt-3 mx-4">Answers:</h3>
@if (Model.Answers != null && Model.Answers.Count > 0)
{
   
        @foreach (var answer in Model.Answers)
        {
             

            <div class="col-12">
                <div class="card mx-3 mb-4" style="width: 100%; max-width: 1050px;">
                    <div class="card-body">
                        <p class="card-title">@answer.Explanation</p>
               
                        <div class="text-end">
                            <a href="@Url.Action("UpdateAnswer", "ForumPortal", new { answerId = answer.AnswerId})">
                            <i class="bx bx-edit-alt me-1"></i>
                            </a>
                            <a>
                                <form action="@Url.Action("DeleteAnswer", "ForumPortal")" method="post" style="display:inline;">
                                    <input type="hidden" name="answerId" value="@answer.AnswerId" />
                                    <input type="hidden" name="questionId" value="@Model.Question.QuestionId" />

                                    @if (answer.UserId == ViewBag.loggedUserId)
                                    {
                                        <button type="submit" class="btn p-0" onclick="return confirm('Are you sure you want to delete this answer?')">
                                            <i class="bx bx-trash me-1"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn p-0" onclick="return confirm('Are you sure you want to delete this answer?')" disabled>
                                            <i class="bx bx-trash me-1"></i>
                                        </button>

                                    }
                                    
                                </form>
                            </a>


                        </div>
                    </div>
                </div>
            </div>
        }
     


}
else
{
    <p class="pb-1 mb-4 mt-3 mx-4">No answers yet. Be the first to answer!</p>
}

<a href="@Url.Action("CreateAnswer", new { questionId = Model.Question.QuestionId })" class="btn btn-primary pb-1 mb-4 mt-3 mx-4">Add Answer</a>
</div>