@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row mb-4">
            <div class="col-6">
                <h4 class="fw-bold py-3"><span class="text-muted fw-light">Contribution Portal /</span> Code Snippet</h4>
            </div>
            <div class="col-6 text-end">
                <a href="@Url.Action("Create", "CodeSnippet", new { Area = "ContributionPortal"})" class="btn btn-primary btn-lg" type="button">Create new</a>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
            <div class="container-fluid">


                <div class="collapse navbar-collapse" id="navbarSupportedContent">

